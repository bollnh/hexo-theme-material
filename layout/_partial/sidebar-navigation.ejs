    <!-- User dropdown  -->
    <li class="dropdown">
        <ul id="settings-dropdown" class="dropdown-menu">
			<% for (var i in theme.dropdown){ %>
                <li>
                    <a href="<%= theme.dropdown[i].link %>" target="_blank" title="<%= i %>">
						<i class="material-icons sidebar-material-icons sidebar-indent-left1pc-element"><%= theme.dropdown[i].icon %></i>
                        <%= i %>
                    </a>
                </li>
            <% } %>
        </ul>
    </li>

    <!-- Homepage -->
    <li id="sidebar-first-li">
        <a href="<%= config.root %>" target="_self">
            <i class="material-icons sidebar-material-icons">
			<% if(typeof theme.icon.Homepage == "string") { %>
				<%- theme.icon.Homepage %>
			<% } else { %>
				home
			<% } %>
			</i>
             <%= __("sidebar.homepage") %>
        </a>
    </li>

