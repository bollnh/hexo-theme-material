<ul class="nav sidebar-nav">
    <!-- User dropdown  -->
    <li class="dropdown">
        <ul id="settings-dropdown" class="dropdown-menu">
            <% for (var i in theme.sidebar.dropdown) { %>
                <li>
                    <a href="<%= theme.sidebar.dropdown[i].link %>" target="_blank" title="<%= i %>">
                        <% if(theme.sidebar.dropdown[i].icon) { %>
                            <i class="material-icons sidebar-material-icons sidebar-indent-left1pc-element"><%= theme.sidebar.dropdown[i].icon %></i>
                        <% } %>
                        <%= i %>
                    </a>
                </li>
            <% } %>
        </ul>
    </li>

    <% for (var i in theme.sidebar_order) { %>
      <% if(i === 'homepage') { %>
        <!-- Homepage -->
          <li id="sidebar-first-li">
              <a href="<%= config.root %>" target="_self">
                  <% if(theme.sidebar_order[i].icon) { %>
                      <i class="material-icons sidebar-material-icons"><%= theme.sidebar_order[i].icon %></i>
                  <% } %>
                  <%= __('sidebar.homepage') %>
              </a>
          </li>
          <% if(theme.sidebar_order[i].divider === true) { %>
              <li class="divider"></li>
          <% } %>
      <% } else if (i === 'archives') { %>
        <!-- Archives  -->
          <li class="dropdown">
              <a href="#" class="ripple-effect dropdown-toggle" data-toggle="dropdown">
                  <% if(theme.sidebar_order[i].icon) { %>
                      <i class="material-icons sidebar-material-icons"><%= theme.sidebar_order[i].icon %></i>
                  <% } %>
                      <%= __('sidebar.archive') %>
                  <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
              <li>
                  <%- list_archives({
                      show_count: true,
                      amount: 5,
                      class: 'sidebar_archives',
                      style: 'none',
                      separator: '</li><li>'
                  }) %>
              </ul>
          </li>
          <% if(theme.sidebar_order[i].divider === true) { %>
              <li class="divider"></li>
          <% } %>
      <% } else if (i === 'categories') { %>
        <!-- Categories  -->
          <li class="dropdown">
              <a href="#" class="ripple-effect dropdown-toggle" data-toggle="dropdown">
                  <% if(theme.sidebar_order[i].icon) { %>
                      <i class="material-icons sidebar-material-icons"><%= theme.sidebar_order[i].icon %></i>
                  <% } %>
                  <%= __('title.category') %>
                  <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                  <li>
                  <%- list_categories({
                      show_count: true,
                      amount: 5,
                      class: 'sidebar_archives',
                      style: 'none',
                      separator: '</li><li>'
                  }) %>
              </ul>
          </li>
          <% if(theme.sidebar_order[i].divider === true) { %>
              <li class="divider"></li>
          <% } %>
      <% } else if (i === 'pages') { %>
      <!-- Pages  -->
      <% for (var x in theme.sidebar_order.pages){ %>
          <li>
              <a href="<%= theme.sidebar_order.pages[x].link %>" title="<%= x %>">
                  <% if(theme.sidebar_order.pages[x].icon){ %>
                      <i class="material-icons sidebar-material-icons"><%= theme.sidebar_order.pages[x].icon %></i>
                  <% } %>
                  <%= x %>
              </a>
          </li>
          <% if(theme.sidebar_order.pages[x].divider === true) { %>
              <li class="divider"></li>
          <% } %>
        <% } %>
      <% } else if (i === 'article_num') { %>
      <!-- Article Number  -->
          <li>
              <a href="/archives">
                  <%= __('sidebar.article_num') %>
                  <span class="sidebar-badge"><%= site.posts.length %></span>
              </a>
          </li>
          <% if(theme.sidebar_order[i].divider === true) { %>
              <li class="divider"></li>
          <% } %>
      <% } %>
  <% } %>
</ul>
