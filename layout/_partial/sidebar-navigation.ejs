	<!-- Article Numebr  -->
    <li>
        <a href="/archives">
			<i class="material-icons sidebar-material-icons">
			<% if(typeof theme.icon.Article == "string") { %>
				<%- theme.icon.Article %>
			<% } else { %>
				library_books
			<% } %>
			</i>
             <%= __("sidebar.article_num") %>
             <span class="sidebar-badge"><%= site.posts.length  %></span>
        </a>
    </li>
	

    <!-- Archives  -->
    <li class="dropdown">
        <a href="#" class="ripple-effect dropdown-toggle" data-toggle="dropdown">
            <i class="material-icons sidebar-material-icons">
			<% if(typeof theme.icon.Archives == "string") { %>
				<%- theme.icon.Archives %>
			<% } else { %>
				inbox
			<% } %>
			</i>
             <%= __("sidebar.archive") %>
            <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
            <li>
            <%- list_archives({
                show_count: true,
                amount: 5,
                class: 'sidebar_archives',
                style: 'none',
                separator: '</li><li>'
            }) %>
        </ul>
    </li>


    <!-- Categories  -->
    <% if(theme.sidebar_categories == true){ %>
    <li class="dropdown">
        <a href="#" class="ripple-effect dropdown-toggle" data-toggle="dropdown">
            <i class="material-icons sidebar-material-icons">
			<% if(typeof theme.icon.Categories == "string") { %>
				<%- theme.icon.Categories %>
			<% } else { %>
				chrome_reader_mode
			<% } %>
			</i>
             <%= __("title.category") %>
            <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
            <li>
            <%- list_categories({
                show_count: true,
                amount: 5,
                class: 'sidebar_archives',
                style: 'none',
                separator: '</li><li>'
            }) %>
        </ul>
    </li>
	
    <% } %>
    <!-- Divider -->
    <li class="divider"></li>

    <!-- Pages  -->
	<% for (var i in theme.pages){ %>
		<li>
			<a href="<%= theme.pages[i] %>" title="<%= i %>">
				<%= i %>
			</a>
		</li>
	<% } %>

